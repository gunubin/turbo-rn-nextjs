{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@app/*": [
        "../../domain/app/src/*"
      ],
      "@todo/*": [
        "../../domain/todo/src/*"
      ],
      "@web/*": [
        "./src/*"
      ]
    },
    "composite": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../domain/app"
    },
    {
      "path": "../../domain/todo"
    }
  ]
}
