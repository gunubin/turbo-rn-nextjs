{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@domain/app/*": [
        "../../domain/app/src/*"
      ],
      "@domain/todo/*": [
        "../../domain/todo/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "composite": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}
